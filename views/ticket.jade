extends layout

block content
  .container
    .col-sm-12
      .panel.panel-default.row
        .panel-heading
          h1.panel-title 경로 요청
        .panel-body
          .row
            label.col-sm-2 코스 id
            label.col-sm-2 목적지
            label.col-sm-2 핸드폰 번호
            label.col-sm-2 인원
          each item in courseRequests
            .row
              label.col-sm-2 #{item.course_id}
              label.col-sm-2 #{item.destination.name}
              label.col-sm-2 #{item.user.phone}
              label.col-sm-2 #{item.members}
        .panel-footer
          .row.well.well-sm
            form.form-horizontal(role='form', action="/ticket", method='POST')
              .form-group
                label.col-sm-1.control-label(for='cid') 이벤트 ID
                .col-sm-2
                  input#cid.form-control(type='text', name='eid')
              .form-group
                label.col-sm-1.control-label(for='bcnt') 버스 수
                .col-sm-2
                  input#bcnt.form-control(type='text', name='bcnt')
              button.btn.btn-default.pull-right(type='submit') 발권
